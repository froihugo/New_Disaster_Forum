<%= form_with model: @post do |form| %>
  <div>
    <div class="form-group">
      <% form.label :title %>
      <%= form.text_field :title, placeholder: "Tell us what happened...", class: "mx-auto"  %>
    </div>
    <div class="form-group">
      <% form.label :content %>
      <%= form.text_field :content, placeholder: "Describe us what happened..."  %>
    </div>
    <div class="form-group">
      <% form.label :location %>
      <%= form.text_field :location, placeholder: "Where this was happened?" %>
    </div>
    <%= form.submit "Submit", class:"btn btn-dark"%>
  </div>
<% end %>