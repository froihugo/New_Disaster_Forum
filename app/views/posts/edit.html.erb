<% if @post.errors.any? %>
  <ul>
    <% @post.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |form| %>

<div class="container-fluid border col-6 text-center ">
  <h1>EDIT POST</h1>
  <div class="d-block">
    <div class="form-group py-2">
      <% form.label :title %>
      <%= form.text_field :title, placeholder: "Tell us what happened...", class: "form-control" %>
    </div>

    <div class="form-group py-2">
      <% form.label :content %>
      <%= form.text_area :content, placeholder: "Describe what happened...", class: "form-control", row: "10" %>
    </div>

    <div class="form-group py-2">
      <% form.label :location %>
      <%= form.text_field :location, placeholder: "Location", class: "form-control" %>
    </div>
  </div>
  <%= form.submit class: "btn btn-primary" %>
  <%= link_to "Clear", new_post_path, class: "btn btn-secondary" %>
  <% end %>
</div>
</form>