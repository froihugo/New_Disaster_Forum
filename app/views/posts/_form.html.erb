<%= form_with model: post do |form| %>
  <% if post.errors.any? %>
    <ul>
      <% post.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

    <div>
      <% form.label :title %>
      <%= form.text_field :title, placeholder: "tell us what happened" %>
    </div>

    <div>
      <% form.label :content %>
      <%= form.text_area :content, placeholder: "describe what happened"  %>
    </div>

    <div>
      <% form.label :location %>
      <%= form.text_field :location, placeholder: "location" %>
    </div>

    <%= form.submit %>
  <% end %>